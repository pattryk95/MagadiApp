@model MagadiApp.Web.Models.ProductDto

<form asp-action="ProductCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">
            Dodaj usługę
        </h1>
        <hr />
        <div clss="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;">Nazwa</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;">Opis</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size:20px;">Cena</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="col-2">
@*                <label asp-for="CategoryDto.Name" class="control-label pt-2" style="font-size:20px;">Kategoria</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryDto.Name" class="form-control" />
                <span asp-validation-for="CategoryDto.Name" class="text-danger"></span>*@
                <h3>Template for category</h3>
            </div>

            <div class="row">
                <div class="col-5">
                    <a asp-action="ProductIndex" class="btn-primary btn form-control">Wróć do listy usług</a>
                </div>
                <div class="col-5">
                    <input type="submit" value="Dodaj" class="btn btn-success form-control" />
                </div>
            </div>

        </div>
        <div>
        </div>
    </div>
</form>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}